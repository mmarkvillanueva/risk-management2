  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap-cloud-sdk/http-client": "^3.1.1",
    "@sap/cds": "^6",
    "@sap/cds-hana": "^2",
    "@sap/hdi-deploy": "^4.8.1",
    "@sap/xssec": "^3",
    "core-util-is": "^1.0.3",
    "express": "^4",
    "passport": "^0"
  },
  "devDependencies": {
    "@sap/cds-dk": "^7",
    "@sap/ux-specification": "^1.108.4",
    "sqlite3": "^5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-risks": "cds watch --open risks/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "sapux": [
    "app/risks"
  ],
  "cds": {
    "hana": {
      "deploy-format": "hdbtable"
    },
    "requires": {
      "API_BUSINESS_PARTNER": {
        "kind": "odata-v2",
        "model": "srv/external/API_BUSINESS_PARTNER",
        "[development]": {
          "credentials": {
            "url": "https://sandbox.api.sap.com/s4hanacloud/sap/opu/odata/sap/API_BUSINESS_PARTNER/"
          }
        },
        "[production]": {
          "destination": "API_BUSINESS_PARTNER"
        }
      },
      "[production]": {
        "db": "hana",
        "auth": "xsuaa"
      }
    }
  }
